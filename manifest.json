{
  "manifest_version": 3,
  "name": "YouTube Fullscreen Focus",
  "version": "1.0.0",
  "description": "Prevents accidental keystrokes while watching YouTube videos in fullscreen mode",

  "permissions": ["storage", "activeTab", "scripting"],

  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "*://*.youtubekids.com/*",
    "*://youtubekids.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*",
        "*://*.youtubekids.com/*",
        "*://youtubekids.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16-active.png",
      "32": "icons/icon32-active.png",
      "48": "icons/icon48-active.png",
      "128": "icons/icon128-active.png"
    }
  },

  "icons": {
    "16": "icons/icon16-active.png",
    "32": "icons/icon32-active.png",
    "48": "icons/icon48-active.png",
    "128": "icons/icon128-active.png"
  }
}
